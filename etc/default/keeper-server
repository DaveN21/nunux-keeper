# Application location
APP_MAIN=/opt/node/keeper/current/app.js

# Env
# Default: development
export NODE_ENV="production"

# Server port
# Default: 3000
export APP_PORT=3001

# Server base URL (Realm)
# Default: http://localhost
export APP_REALM="http://keeper.nunux.org"

# Application logger level
# Default: debug
export APP_LOG=info

# Automatic grant access
# Default: true
export APP_AUTO_GRANT_ACCESS=false

# Session secret key
# Default: NuNUXKeEpR_
export APP_SESSION_SECRET="NuNUXKeEpR_"

# Admin account
export APP_ADMIN="foo@bar.com"

# Elastic search URI
# Default: http://localhost:9200
export APP_ELASTICSEARCH_URI="http://localhost:9200"

# MongoDB URI
# Default: mongodb://localhost/keeper
export APP_MONGO_URI="mongodb://localhost/keeper"

# Redis URI
# Default: redis://localhost:6379/5
export APP_REDIS_URI="redis://localhost:6379/5"

# Application data directory
# Default: ./var
export APP_VAR_DIR="/var/node/keeper"

# Download document's resources
# Default: default
# Values:
# - disabled: no resource downloaded
# - async-redis: async download using Redis as messaging
# - default: direct download
export APP_DOWNLOADER="async-redis"


