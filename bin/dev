#!/bin/bash

###
# Simple script to get a development shell into the container.
# The development container need a volume:
#   docker run -v ~/src/keeper:/opt/keeper -v ~/var/keeper:/var/opt/keeper -name KEEPER_VOLUMES busybox true
###
docker run \
    --rm \
    --name="keeper" \
    --link mongodb:db \
    --link elastic:elasticsearch \
    --link redis:redis \
    --volumes-from KEEPER_VOLUMES \
    --env-file="./etc/keeper.conf" \
    -i -t \
    --entrypoint="/bin/bash" \
    ncarlier/keeper \
    -c /bin/bash

