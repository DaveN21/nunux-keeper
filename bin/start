#!/bin/bash

###
# Simple script to launch the application.
# Start the server:
#   start
# Start tests:
#   start test
###
docker run \
    --rm \
    --name keeper \
    --link mongodb:db \
    --link elastic:elasticsearch \
    --link redis:redis \
    --env-file ./etc/keeper.conf \
    -i -t \
    ncarlier/keeper $@

